server {
    listen 80;
    server_name example.com;

    root /var/www/z1helpdesk/public;
    index index.php;

    location / {
        try_files $uri /index.php?$query_string;
    }

    location ~* \.(env|ini|log|sql|bak)$ {
        deny all;
    }

    location ~* ^/(storage|config|sql|vendor) {
        deny all;
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass 127.0.0.1:9000;
    }

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=()" always;
    add_header Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'" always;
}
