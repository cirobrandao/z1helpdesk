{
  "name": "z1/z1helpdesk",
  "description": "Z1 Helpdesk MVP",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "vlucas/phpdotenv": "^5.6",
    "twbs/bootstrap": "^5.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/Support/helpers.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "@php scripts/post-install.php"
    ],
    "build-assets": [
      "@php scripts/build-assets.php"
    ]
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "sort-packages": true
  }
}
